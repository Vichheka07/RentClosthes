<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/Image_Product"
        android:layout_width="137dp"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_dark_background"
        app:cardCornerRadius="13dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/im_pro_test"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:cardCornerRadius="200dp"
        android:layout_alignEnd="@id/Image_Product"
        android:layout_alignTop="@id/Image_Product">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image_Product"
        android:layout_alignStart="@+id/Image_Product"
        android:layout_marginTop="10dp"
        android:text="Mallory Dress In Gold" />
        <LinearLayout
            android:id="@+id/star_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_product"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/ic_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars"/>

            <ImageView
                android:id="@+id/ic_stars1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars" />
            <ImageView
                android:id="@+id/ic_stars2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars" />
            <ImageView
                android:id="@+id/ic_stars3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars_halt" />
            <ImageView
                android:id="@+id/ic_stars4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars_outline" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="3.8"/>
        </LinearLayout>

    <TextView
        android:id="@+id/text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/star_all"
        android:text="US $ 25.99/4 day"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_money"
        android:text="Size Free"
        android:textSize="18dp"
        android:textColor="@color/teal_200"
        android:textStyle="bold" />



</RelativeLayout>