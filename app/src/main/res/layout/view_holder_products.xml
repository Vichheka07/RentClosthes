<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/Image_Product0"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_dark_background"
        app:cardCornerRadius="13dp">

        <ImageView
            android:id="@+id/image_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/im_khmerclothes2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/Image_Product0"
        android:layout_alignEnd="@id/Image_Product0"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/im_profile"
            android:contentDescription="Profile renter" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image_Product0"
        android:layout_alignStart="@+id/Image_Product0"
        android:layout_marginTop="10dp"
        android:text="Mallory Dress In Gold"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/star_all0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ic_stars01"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stars" />

        <ImageView
            android:id="@+id/ic_stars02"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stars" />

        <ImageView
            android:id="@+id/ic_stars03"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stars" />

        <ImageView
            android:id="@+id/ic_stars04"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stars_halt" />

        <ImageView
            android:id="@+id/ic_stars05"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_stars_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.8"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_money0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/star_all0"
        android:text="US $ 25.99/4 day"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_money0"
        android:text="Free size"
        android:textColor="@color/teal_200"
        android:textSize="16sp" />
</RelativeLayout>