<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rentclothes"/>
        <ImageView
            android:id="@+id/ic_search"
            android:layout_marginEnd="13dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView5"
            android:src="@drawable/ic_search" />

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/imageView5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_bell" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="4500"
                    app:iss_period="3000"/>
            <TextView
                android:paddingStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_do_you_want_to_rent"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linearImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp">
                            <ImageView
                                android:id="@+id/im_khmer"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:src="@drawable/im_khmer"
                                android:importantForAccessibility="no"
                                android:contentDescription="khmer"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/im_khmer"
                                android:layout_alignEnd="@+id/im_khmer"
                                android:layout_below="@id/im_khmer"
                                android:text="@string/khmer"
                                tools:ignore="TextContrastCheck" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp">
                            <ImageView
                                android:id="@+id/im_graduate"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:src="@drawable/im_graduate"
                                android:contentDescription="GRADUATION"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_alignEnd="@id/im_graduate"
                                android:layout_alignStart="@id/im_graduate"
                                android:layout_below="@id/im_graduate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/graduation"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                tools:ignore="TextContrastCheck" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp">
                            <ImageView
                                android:id="@+id/im_wedding"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="WEDDING"
                                android:src="@drawable/im_wedding"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:textSize="12sp"
                                android:layout_alignEnd="@id/im_wedding"
                                android:layout_alignStart="@id/im_wedding"
                                android:layout_below="@+id/im_wedding"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/wedding"
                                tools:ignore="TextContrastCheck" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp">
                            <ImageView
                                android:id="@+id/im_weekend"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="WEEKEND"
                                android:src="@drawable/im_weekend"
                                tools:ignore="HardcodedText,ImageContrastCheck" />
                            <TextView
                                android:textSize="12sp"
                                android:layout_alignEnd="@+id/im_weekend"
                                android:layout_alignStart="@id/im_weekend"
                                android:layout_below="@id/im_weekend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/weekend"
                                tools:ignore="TextContrastCheck" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp">
                            <ImageView
                                android:layout_marginEnd="16dp"
                                android:id="@+id/im_home"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="HOME"
                                android:src="@drawable/im_home"
                                tools:ignore="HardcodedText,ImageContrastCheck" />
                            <TextView
                                android:textSize="12sp"
                                android:layout_below="@id/im_home"
                                android:layout_alignStart="@id/im_home"
                                android:layout_alignEnd="@+id/im_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="@string/home"/>
                        </RelativeLayout>
                    </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Trending_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_custom_2"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="@string/trending_now"
                    tools:ignore="RtlSymmetry,TouchTargetSizeCheck,TextSizeCheck" />
                <TextView
                    android:id="@+id/Khmer_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/Trending_now"
                    android:background="@drawable/ic_custom_2"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="@string/khmer_editor"
                    tools:ignore="RtlSymmetry,TextSizeCheck,TouchTargetSizeCheck" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>